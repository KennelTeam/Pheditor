<resources xmlns:tools="http://schemas.android.com/tools">
    <color name="mainTextColor">#FF000000</color>
    <attr name="cropButtonImage" format="reference"/>
    <attr name="drawButtonImage" format="reference"/>
    <attr name="pesButtonImage" format="reference"/>
    <attr name="filterButtonImage" format="reference"/>
    <!-- Base application theme. -->
    <style name="Theme.Pheditor" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark</item>
        <item name="colorPrimaryVariant">@color/dark_purple_1</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_purple_2</item>
        <item name="colorSecondaryVariant">@color/dark_teal_2</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="cropButtonImage">@drawable/crop_icon</item>
        <item name="drawButtonImage">@drawable/draw_icon</item>
        <item name="pesButtonImage">@drawable/pes_icon</item>
        <item name="filterButtonImage">@drawable/filter_icon</item>
        <!-- Customize your theme here. -->
    </style>
</resources>